<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.65"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="3dp"
            tools:src="@drawable/ic_launcher_background"
            android:id="@+id/newsli_image"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_margin="10dp"
        android:layout_weight="2"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsli_title_text"
            tools:text="Covid on surge"
         android:fontFamily="@font/latobold"

            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/newsli_desc_text"
          android:fontFamily="@font/lato_regular"
            tools:text="Exeter head coach Susie Appleby 'wont accept anything less' than a play-off place next season."
            android:maxLines="3"
            android:textSize="14sp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsli_date_text"
            tools:text="2021/5/21"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="14sp"
            />




    </LinearLayout>




</LinearLayout>

</androidx.cardview.widget.CardView>